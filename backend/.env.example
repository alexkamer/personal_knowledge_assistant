# Application
APP_NAME=Personal Knowledge Assistant
ENVIRONMENT=development
DEBUG=True


LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres@localhost:5432/knowledge_assistant
POSTGRES_USER=postgres
POSTGRES_DB=knowledge_assistant

# Vector Database (ChromaDB)
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_COLLECTION_NAME=knowledge_base

# Ollama (Local LLMs) - Latest Models Dec 2024
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=qwen2.5:14b
OLLAMA_REASONING_MODEL=phi4:14b
OLLAMA_FAST_MODEL=llama3.2:3b
OLLAMA_REQUEST_TIMEOUT=300

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
USE_LOCAL_EMBEDDINGS=True

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_RETRIEVAL_CHUNKS=10
MAX_CONTEXT_TOKENS=5000

# Security (for future authentication)
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# YouTube Proxy Configuration (optional)
# Set these to use rotating residential proxies from Webshare to avoid rate limiting
# Sign up at https://www.webshare.io/ to get credentials
WEBSHARE_PROXY_USERNAME=
WEBSHARE_PROXY_PASSWORD=
